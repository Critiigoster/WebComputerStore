
<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListOfProducts</title>
</head>

<body>
    <h2>All Temporary Products</h2>

    <div class="row ml-5 mb-2">
        @{
            foreach (var item in Model._Products)
            {
                <div class="col-lg-4">
                    <img class="img-thumbnail" src ="@item.Image" alt="@item.Title" />
                     <h3>@item.Title</h3>
                     <p>@item.ShortDescription</p>
                     <p>@item.Price.ToString("c")</p>
                     <p><a class="btn btn-warning" href="#">Details</a></p>
                </div>
            }

        }

    </div>





</body>
</html>



